script.
  function form(){
    return {
      isShow:false,
      _fm:{},
      inputElements: [],
      update: function(event) {
        let fm = this.fm(this.getElByName(event.target));
        //- console.log(this.getObj(event.target.name))
        if (!fm) {
          return false;
        }
        //日付選択はdatepickerから選択するタイミングのfocusoutでエラーが出てしまうので除く
        //- console.log()
        //- if (event.target.name === 'customer[note][生年月日]') {
        //-   this.picker.showButtonPanel
        //-   //- console.log(event.type)
        //-   fm.blurred = false;
        //-   return false;
        //- }

        if (event.type === "focusout" || event.type == "change") {
          fm.blurred = true;
        }
        this.updateErrorMessages();
      },
      submit: function (event) {
        const invalidElements = this.inputElements.filter((ele) => {
          return Iodine.is(this.fm(this.getElByName(ele)).value, JSON.parse(ele.dataset.rules)) !== true;
        });
        if (invalidElements.length > 0) {
          event.preventDefault();
          //- document.getElementById(invalidElements[0].id).parentNode.parentNode.scrollIntoView();
          //- console.log(document.getElementById(invalidElements[0].id))
          //- console.log(document.getElementById(invalidElements[0].id).parentNode.parentNode)
          // 全部の入力項目をエラー表示の対象にするためblurredにする
          this.inputElements.map((ele) => {
            this.fm(this.getElByName(ele)).blurred = true;
          });
          this.updateErrorMessages();
        }
      },
      date(event){
        console.log("date")
        this.fm(event.target.name).errorMessage = this.getErrorMessage(event.target);
        Iodine.is(event.target.value, JSON.parse(['required']))
        this.updateErrorMessages()
        //- console.log(this.fm(event.target.name))
      },
      updateErrorMessages: function () {
        this.inputElements.map((ele) => {
          this.fm(this.getElByName(ele)).errorMessage = this.getErrorMessage(ele);
        });
        console.log(this._fm)
      },
      getErrorMessage: function(ele){
        //- console.log(this.fm(this.getElByName(ele)).value)
        //- console.log(JSON.parse(ele.dataset.rules))
        const error = Iodine.is(this.fm(this.getElByName(ele)).value, JSON.parse(ele.dataset.rules));
        //- console.log(ele.name)
        //- console.log(error)

        if (error !== true && this.fm(this.getElByName(ele)).blurred) {
          return Iodine.getErrorMessage(error);
        }
        return '';
      },
      fm(name=''){
        return name != '' ? this._fm[name] : null
      },
      setFm(name,data){
        this._fm[name] = data
      },
      getElByName(ele){
        //- if(!ele) return false
        //- console.log(ele)
        //- console.log(ele.dataset)
        if($(ele).data('name')){
          return $(ele).data('name')
        }else if($(ele).attr("name")){
          return $(ele).attr("name").replace('][]',']')
        }

        //- return ele.dataset.name ? ele.dataset.name : ele.name.replace('][]',']')
      },
      fmValue(name){
        //- console.log(name)
        return this.getElByName(name) ? this.fm(this.getElByName(name)).value : ''
      },
      fmError(name){
        console.log(this.getElByName(name))
        console.log(this.fm(this.getElByName(name)).errorMessege)
        return this.getElByName(name) ? this.fm(this.getElByName(name)).errorMessage : ''
      },
      init(){
        this.setCustomRules()
        this.inputElements = [...this.$el.querySelectorAll("[data-rules]")];
        this.initDomData()


      },
      initDomData: function () {
        this.inputElements.map((ele) => {
          //- console.log(this.getElByName(ele))
          this.setFm(this.getElByName(ele) ,{
            type: ele.type ? 'input':'check',
            errorMessage:'',
            value: ele.dataset.name ? []:'' ,
            blurred: false
          })
        });
        //- console.log(this.customer)

        this.setFm('customer[note][生年月日]',{
          //- type:'date',
          value:'',
          errorMessage:'',
          blurred: false
        });

        $("#date_of_birth").datepicker({
          changeMonth: true,
          changeYear: true,
          dateFormat: 'yy-mm-dd',
          yearRange: '-90:-10',
          defaultDate: '-30y',
          onSelect: (dateText, inst) => {
            console.log("change")
            console.log(inst)
            this.fm('customer[note][生年月日]').burred = false;
            this.fm('customer[note][生年月日]').value = dateText;
            this.fm('customer[note][生年月日]').errorMessage = ''
            this.updateErrorMessages()
          }
        })
        .css('ime-mode', 'disabled')
        .attr('maxlength', '10');
      },
      setCustomRules(){
        Iodine.addRule('requiredChoice', (value) => {
          return Iodine.isArray(value) ? value.length > 0 : value != ''
        });
        Iodine.messages.requiredChoice = "選択してください";
        Iodine.setErrorMessage("required", "入力してください");
        Iodine.setErrorMessage("email", "メールアドレスが正しくありません");
        Iodine.setErrorMessage("minLength", "[PARAM]文字以上で入力してください");
      }
    };
  }
